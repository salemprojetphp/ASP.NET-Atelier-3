@model MyFrstMVCApp.Models.Movie

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Movie</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" value="@Model.Title"/>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="MovieAdded"></label>
                <input asp-for="MovieAdded" type="datetime-local" class="form-control" value="@Model.MovieAdded" />
            </div>

            <div class="form-group">
                <label asp-for="@Model.GenreId">Genre</label>
                <input asp-for="@Model.GenreId" class="form-control" value="@Model.GenreId" />
            </div>

            <div class="form-group">
                <label asp-for="@Model.photo">Photo</label>
                <input type="file" asp-for="@Model.photo" class="form-control" />
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
            
        </form>
    </div>
</div>
