@model IEnumerable<MyFrstMVCApp.Models.Movie> 

<h2>Liste des films</h2>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@movie.Id</td>
                <td>@movie.Title</td>
            </tr>
        }
    </tbody>
</table>
