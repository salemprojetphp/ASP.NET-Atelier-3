<form asp-action="Create" enctype="multipart/form-data" method="post">
    <div class="form-group">
        <label asp-for="@Model.Title"></label>
        <input asp-for="@Model.Title" class="form-control" placeholder="Enter Movie name" />
    </div>

    <div class="form-group">
        <label asp-for="MovieAdded"></label>
        <input asp-for="MovieAdded" type="datetime-local" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="@Model.GenreId">Genre</label>
        <input asp-for="@Model.GenreId" class="form-control" placeholder="Enter Genre" />
    </div>

    <div class="form-group">
        <label asp-for="@Model.photo">Photo</label>
        <input type="file" asp-for="@Model.photo" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Save Info</button>
    <a asp-action="Index" class="btn btn-secondary">Back To List</a>
</form>


